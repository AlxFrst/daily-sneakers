<div class="navbar navbar-expand-sm navbar-light fixed-top navbar-lewagon" data-controller="navbar" data-action="scroll@window->navbar#updateNavbar">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <h1>Daily Sneakers</h1>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="search-bar">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group d-flex justify-content-between">
          <%= form_tag sneakers_path, method: :get, class:"mr-5" do %>
            <%= text_field_tag :query, params[:query], class: "form-control search-placeholder ", id: "search_query", placeholder: "Article name or keywords...", autocomplete: "off"%>
          <% end %>
          <button type="submit" class="button">
            Search
          </button>
        </div>
      <% end %>
    </div>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <% if current_user.avatar.key.nil? %>
              <%= image_tag "https://thumbs.dreamstime.com/b/avatar-par-d%C3%A9faut-ic%C3%B4ne-profil-vectoriel-m%C3%A9dias-sociaux-utilisateur-portrait-176256935.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
              <%= cl_image_tag current_user.avatar.key, class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Wishlist", wishlist_path, class: "dropdown-item" %>
              <%= link_to "Collection", collection_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <div class="nav-buttons d-flex justify-content-between">
              <%= link_to "Sign up", new_user_registration_path, class: "signup" %>
              <%= link_to "Log in", user_session_path, class: "login" %>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>
